# -*- coding: utf-8 -*-
# Rodar como: python lpthw.py
print "\nExercício 31" # Exercício 31
print "You enter a dark room with two doors. Do you go through door #1 or door #2?"

door = raw_input("> ")

if door == "1": # Escolha número 1 da pergunta principal
	print "There's a giant bear here eating a cheese cake. What do you do?"
	print "1. Take the cake."
	print "2. Scream at the bear."

	bear = raw_input("> ")

	if bear == "1": # Escolha número 1 da porta 1
		print "The bear eats your face off. Good job!"
	elif bear == "2": # Escolha número 2 da porta 1
		print "The bear eats your legs off. Good job!"
	else: # Escolha número 3 da porta 1
		print "Well, doing %s is probably better. Bear runs away." % bear

elif door == "2": # Escolha número 2 da pergunta principal
		print "You stare into the endless abyss at Cthulhu's retina."
		print "1. Blueberries."
		print "2. Yellow jacket clothespins."
		print "3. Understanding revolvers yelling melodies."

		insanity = raw_input("> ")
		if insanity == "1" or insanity == "2": # Escolha número 1 ou 2 da porta 2
			print "Your body survives powered by a mind of jello. Good job!"
		else: # Escolha número 3 ou outro número da porta 2
			print "The insanity rots your eyes into a pool of muck. Good job!"

else: # Escolha número 3 ou outro número da pergunta principal
		print "You stumble around and fall on a knife and die. Good job!"
