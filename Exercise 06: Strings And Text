# -*- coding: utf-8 -*-
print "\nExercício 6" # Exercício 6
x = "There are %d types of people." % 10
# %d imprime número inteiro
binary = "binary"
do_not = "don't"
y = "Those who know %s and those who %s." % (binary, do_not)
# quando mais que uma variável, as variáveis depois de % devem vir entre parênteses
print x
print y

print "I said: %r." % x # %r faz imprimir com as aspas da string x
print "I also said: '%s'." % y

hilarious = False
joke_evaluation = "Isn't that joke so funny?! %r"

print joke_evaluation % hilarious

w = "This is the left side of..."
e = "a string with a right side."

print w + e # Vai juntar as duas strings

print "\nExercício 7" # Exercício 7
print "Mary had a little lamb."
print "Its fleece was white as %s." % 'snow'
print "And everywhere that Mary went."
print "." * 10  # what'd that do?
# Vai imprimir o ponto 10 vezes

end1 = "C"
end2 = "h"
end3 = "e"
end4 = "e"
end5 = "s"
end6 = "e"
end7 = "B"
end8 = "u"
end9 = "r"
end10 = "g"
end11 = "e"
end12 = "r"

# watch that comma at the end.  try removing it to see what happens
print end1 + end2 + end3 + end4 + end5 + end6,
# A vírgula junta a linha abaixo, mas coloca um espaço entre as linhas
print end7 + end8 + end9 + end10 + end11 + end12
