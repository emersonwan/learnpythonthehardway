# -*- coding: utf-8 -*-
# Rodar como: python lpthw.py
print "\nExercício 30" # Exercício 30
people = 30
cars = 40
trucks = 15

print "people comparado com cars"
if cars > people:
	print "We should take the cars."
elif cars < people: # elif fica na mesma identação de if
	print "We should not take the cars."

print "trucks comparado com cars"
if trucks > cars:
	print "That's too many trucks."
elif trucks < cars: # elif fica na mesma identação de if
	print "Maybe we could take the trucks."
else: # else fica na mesma identação de if e else
	print "We still can't decide."

print "people comparado com trucks"
if people > trucks:
	print "Alright, let's just take the trucks."
else: # else fica na mesma identação de if
	print "Fine, let's stay home then."
